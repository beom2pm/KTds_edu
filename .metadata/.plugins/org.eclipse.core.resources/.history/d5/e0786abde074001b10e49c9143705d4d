<mapper namespace="com.ktds.devpro.ktsports.main.SportMapper">

	<select id="getSportList" resultType="Sport">
		SELECT *
		FROM sport
	</select>
	
	<select id="getSport" resultType="Sport" parameterType="Integer">
		SELECT *
		FROM SPORT
		WHERE sportId = #{sportId}
	</select>
	
</mapper>